{
  "puppet_task_version": 1,
  "supports_noop": false,
  "description": "A task to create new groups in Active Directory",
  "parameters": {
    "group_name": {
      "description": "Name of new group",
      "type": "String[1]"
    },
    "sam_name": {
      "description": "SamAccountName of the group",
      "type": "String[1]"
    },
    "path": {
      "description": "The LDAP path the group will belong within, e.g. CN=Users,DC=mongodb,DC=local",
      "type": "String[1]"
    },
    "display_name": {
      "description": "The display name of the group",
      "type": "String[1]"
    },
    "description": {
      "description": "The description of the group",
      "type": "Optional[String[1]]"
    }
  }
}