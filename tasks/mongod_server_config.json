{
  "puppet_task_version": 1,
  "supports_noop": false,
  "description": "A task to configure mongodb instance.",
  "parameters": {
    "mongodb_service_user": {
      "description": "User that the mongodb service will run as",
      "type": "String[1]"
    },
    "config_file": {
      "description": "config file path and name",
      "type": "String[1]"
    },
    "db_path": {
      "description": "Path to DB files",
      "type": "String[1]"
    },
    "log_file": {
      "description": "Path and file name to log file",
      "type": "String[1]"
    },
    "base_path": {
      "description": "Base path to MongoDB",
      "type": "String[1]"
    },
    "config_file_data": {
      "description": "string of config file content",
      "type": "String[1]"
    }
  }
}