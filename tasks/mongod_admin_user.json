{
  "puppet_task_version": 1,
  "supports_noop": false,
  "description": "Create the root user for the replica set",
  "parameters": {
    "user": {
      "description": "Admin user for the replication set",
      "type": "String[1]"
    },
    "passwd": {
      "description": "Password for Admin user",
      "type": "String[1]",
      "sensitive": true
    },
    "port": {
      "description": "Port to bind to",
      "type": "String[1]"
    },
    "x509_path": {
      "description": "Path and name of x509 PEM file",
      "type": "Optional[String[1]]"
    },
    "ca_path": {
      "description": "Path and name of CA PEM file",
      "type": "Optional[String[1]]"
    },
    "replica_set_name": {
      "description": "Name of the replica set",
      "type": "String[1]"
    }
  }
}